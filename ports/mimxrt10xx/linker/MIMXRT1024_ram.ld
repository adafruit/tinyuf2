/* The default FlexRAM config has 64k ITCM so use it. */
_itcm_base  = 0x00000000;
_itcm_size  = 64K;

_dtcm_base  = 0x20000000;
_dtcm_size  = 64K;

_ocram_base = 0x20200000;
_ocram_size = 128K;

/* The bootrom uses up to 0x20207FFF */
_fcfb_origin = 0x20208000;

_flash_base = 0x60000000;

/*
 * MIMXRT1024 Memory Layout
 *
 *           RAM Executed                       Flash Stored
 * +-----------------------------+    +-----------------------------+
 * |         Text (Code)         |    |         Text (Code)         |
 * |   0x2020A400 - 0x202123FF   |    |   0x60002400 - 0x6000A3FF   |
 * |        (Len: 0x8000)        |    |        (Len: 0x8000)        |
 * +-----------------------------+    +-----------------------------+
 * +-----------------------------+    +-----------------------------+
 * |          Interrupts         |    |          Interrupts         |
 * |   0x2020A000 - 0x2020A3FF   |    |   0x60002000 - 0x600023FF   |
 * |         (Len: 0x400)        |    |         (Len: 0x400)        |
 * +-----------------------------+    +-----------------------------+
 * +-----------------------------+    +-----------------------------+
 * |             IVT             |    |             IVT             |
 * |   0x20209000 - 0x20209FFF   |    |   0x60001000 - 0x60001FFF   |
 * |        (Len: 0x1000)        |    |        (Len: 0x1000)        |
 * +-----------------------------+    +-----------------------------+
 * +-----------------------------+    +-----------------------------+
 * |             FCFB            |    |             FCFB            |
 * |   0x20208000 - 0x20208FFF   |    |   0x60000000 - 0x60000FFF   |
 * |        (Len: 0x1000)        |    |        (Len: 0x1000)        |
 * +-----------------------------+    +-----------------------------+
 * +-----------------------------+
 * |           BootROM           |
 * |   0x20200000 - 0x20207FFF   |
 * |        (Len: 0x8000)        |
 * +-----------------------------+
 * +-----------------------------+
 * |       m_data2 (OCRAM)       |
 * |   0x20200000 - 0x2021FFFF   |
 * |        (Len: 0x20000)       |
 * +-----------------------------+
 * +-----------------------------+
 * |        m_data (DTCM)        |
 * |   0x20000000 - 0x2000FFFF   |
 * |        (Len: 0x10000)       |
 * +-----------------------------+
 */
